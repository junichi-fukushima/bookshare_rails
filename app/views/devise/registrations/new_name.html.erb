<%= render "shared/secondheader" %>

<%= form_for @name do |f| %>
   <h2 class='form-header-text'>
     氏名・生年月日の登録をします。
   </h2> 
  <div class='form-wrap c-black bg-light-gray'>
    <%= render "devise/shared/error_messages", resource: @name %>  
    <div class="form-group  t-center">
      <div class='form-text-wrap'>
        <label class="form-text" for="last_name">お名前(全角)</label>
        <span class="indispensable c-white bg-blue">必須</span>
      </div>
      <div class='input-name-wrap row'>
        <%= f.text_area :last_name, class:"input-default input-name w-40", id:"last-name", placeholder:"例) 福嶋" %>
        <%= f.text_area :first_name, class:"input-default input-name w-40", id:"first-name", placeholder:"例) 淳一" %>
      </div>
    </div>
    <div class="form-group t-center">
      <div class='form-text-wrap'>
        <label class="form-text" for="last_name_kana">お名前カナ(全角)</label>
        <span class="indispensable c-white bg-blue">必須</span>
      </div>
      <div class='input-name-wrap row'>
        <%= f.text_area :last_name_kana, class:"input-default input-name w-40", id:"last-name-kana", placeholder:"例) フクシマ" %>
        <%= f.text_area :first_name_kana, class:"input-default input-name w-40", id:"first-name-kana", placeholder:"例) ジュンイチ" %>
      </div>
    </div>
    <div class="form-group t-center">
      <div class='form-text-wrap'>
        <label class="form-text" for="birth_date">生年月日</label>
        <span class="indispensable c-white bg-blue">必須</span>
      </div>
      <div class='input-birth-wrap row'>
        <%= raw sprintf(
                    f.date_select(
                      :birth_date,
                      class:'select-birth w-30', 
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1930,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>
 </div>
 <div class='actions t-center'>
   <%= f.submit "会員登録" ,class:"action-btn t-center bg-blue c-white" %>
 </div>

<% end %>
