<%= render "shared/secondheader" %>

<%= form_with model: @user, url: user_session_path, local: true do |f| %> 
  <h2 class='form-header-text w-60'>
    ログイン画面
  </h2>
  <div class='form-wrap w-60 c-black bg-light-gray'>
    <div class='login-flash-message c-blue py-05 font-bold'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class="form-group t-center">
      <div class='form-text-wrap'>
        <label class="form-text" for="email">メールアドレス</label>
        <span class="indispensable c-white bg-blue">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default w-60", id:"email", placeholder:"半角英数でご利用中のアドレスを入力", autofocus: true %>
    </div>
    <div class="form-group t-center">
      <div class='form-text-wrap'>
        <label class="form-text" for="password">パスワード</label>
        <span class="indispensable c-white bg-blue">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default w-60", id:"password", placeholder:"6文字以上の半角英数字" %>
    </div>
    <%= render "devise/shared/links" %>
 </div>
  <div class="actions t-center ">
    <%= f.submit "ログイン", class: "action-btn t-center bg-blue c-white" %>
  </div>
<% end %>


